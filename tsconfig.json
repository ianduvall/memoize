{
	"compilerOptions": {
		"target": "esnext",
		"lib": ["ESNext"],
		"moduleDetection": "force",
		"module": "preserve",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"types": [],
		"strict": true,
		"noUnusedLocals": true,
		"declaration": true,
		"noEmit": true,
		"esModuleInterop": true,
		"isolatedDeclarations": true,
		"isolatedModules": true,
		"verbatimModuleSyntax": true,
		"erasableSyntaxOnly": true,
		"skipLibCheck": true
	},
	"include": ["src", "tests"]
}
